import java.util.ArrayList;

public class Lista{
    public static void main(String[] args){

        System.out.println("Lista dos alunos");

        ArrayList<String> Lista = new ArrayList<>();

        Lista.add("Jose");
        Lista.add("Maria");
        Lista.add("Jo√£o");
        Lista.add("Carlos");
        Lista.add("Matheus");

        System.out.println(Lista);

        Lista.remove("Carlos");
        System.out.println("Aluno removido: Carlos");
        System.out.println(Lista);

        System.out.println("Alunos restantes: " + Lista.size());
    }
}
